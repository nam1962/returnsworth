<div class="banner">
    <%= video_tag "video_homepage.mp4", autoplay: true, loop: true, controls: true %>
    <h1 class="title">Eleanor</h1>
    <p class="slogan">Your trusted logistics partner</p>
</div>

  <div class="row mx-auto w-50">
    <button type="button" class="btn-lg btn-block mx-auto py-8 bg-primary p-6 ">Start scanning</button>
  </div>

<script>
// Wrap every letter in a span
var textWrapper = document.querySelector('.slogan');
textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

anime.timeline({loop: true})
  .add({
    targets: '.slogan .letter',
    opacity: [0,1],
    easing: "easeInOutQuad",
    duration: 2250,
    delay: (el, i) => 150 * (i+1)
  }).add({
    targets: '.slogan',
    opacity: 0,
    duration: 1000,
    easing: "easeOutExpo",
    delay: 1000
  });
</script>
