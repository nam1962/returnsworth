<div class="container">
<div class="row justify-content-center">
  <div class="col-lg-6 my-5">
      <div class="card shadow-lg">
        <div class="card-body">


      <%= simple_form_for(@return, local: true, data:{controller: "edit"} ) do |f| %>
        <h1 style="text-align:center;">Order number : <%= f.object.order.order_number %></h1>
<div data-edit-target="div1" class="d-block text-center"> <!-- Ajoute le text-center pour centrer les boutons -->
    <div class="button-wrapper" style="margin: 0 auto; display: flex; flex-direction: column; align-items: center; gap: 20px;">
        <%= link_to 'All good', returns_path, class: "btn btn-success", style: "font-size:20px; padding:15px 30px; width:200px;" %>
        <div class="btn btn-warning" data-action="click->edit#showDiv1" style="font-size:20px; padding:15px 30px; width:200px;"> Issue </div>
    </div>
</div>

        <%= f.fields_for :items do |item_form| %>
          <div data-edit-target="div2" class= "d-none">

            <%= item_form.input :produit, as: :radio_buttons %>
            <%= item_form.input :emballage, as: :radio_buttons %>

            <div data-action="click->edit#showDiv2"> Next</div>
          </div>


          <div data-edit-target="div3" class= "d-none">
          <%= item_form.input :additional_cost, as: :radio_buttons %>
          <%= item_form.input :restock, as: :radio_buttons %>
            <div data-action="click->edit#showDiv3"> Next</div>
          </div>


         <div data-edit-target="div4" class= "d-none">
         <%= f.input :comment, as: :text, input_html: { rows: 4, class: 'form-control' } %>
          <%= f.submit "Update Return", class: "btn btn-primary mt-3" %>
        </div>
        <% end %>
        <%# TODO Ajouter un formulaire nestÃ© par item pour pouvoir editer au cas par cas %>
      <% end %>

      <%= link_to 'Back', returns_path %>
    </div>
      </div>
    </div>
  </div>
</div>
