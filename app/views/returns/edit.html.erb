<h1>Edit return</h1>

<%= form_with(model: @return, local: true) do |form| %>
  <div>
    <%= form.label :order_id, "Order ID" %>
    <%= form.select :order_id, Order.all.pluck(:id, :order_number), prompt: "Select an Order", disabled: (current_user.warehouse_operator? && action_name == 'edit') %>
  </div>

  <div>
    <%= form.label :status, "Status" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :state, "State" %>
    <%= form.text_field :state %>
  </div>

  <div>
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :additional_cost, "Additional Cost" %>
    <%= form.number_field :additional_cost %>
  </div>

  <div>
    <%= form.label :exception, "Exception" %>
    <%= form.text_field :exception %>
  </div>

  <div>
    <%= form.label :restock, "Restock" %>
    <%= form.check_box :restock %>
  </div>

  <%= form.submit "Update Return" %>
<% end %>

<%= link_to 'Back', returns_path %>
