<h1>Returns</h1>

<table>
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Status</th>
      <th>State</th>
      <th>Comment</th>
      <th>Additional Cost</th>
      <th>Exception</th>
      <th>Restock</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @returns.each do |return_record| %>
      <tr>
        <td><%= return_record.items.first.present? ? return_record.order.order_number : 'N/A' %></td>
        <td><%= return_record.status %></td>
        <td><%= return_record.state %></td>
        <td><%= return_record.comment %></td>
        <td><%= return_record.additional_cost %></td>
        <td><%= return_record.exception %></td>
        <td><%= return_record.restock ? "Yes" : "No" %></td>
        <td>
          <%= link_to 'Show', return_record %>
          <% if current_user.warehouse_operator? %>
            <%= link_to 'Edit', edit_return_path(return_record) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.client_service_officer? %>
  <%= link_to 'New Return', new_return_path %>
<% end %>
