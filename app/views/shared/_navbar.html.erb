      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link  menu-button" %>
          </li>
          <% if current_user.warehouse_operator? %>
          <li class="nav-item active">
            <%= link_to "My returns", "/returns", class: "nav-link menu-button" %>
