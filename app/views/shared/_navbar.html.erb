            <%= link_to "logistic", "/logistics", class: "nav-link menu-button" %>
          </li>
          <% end %>
          <% if current_user.client_service_officer? %>
          <li class="nav-item active">
            <%= link_to "New return", "/returns/new", class: "nav-link menu-button" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Admin", "/admin", class: "nav-link menu-button" %>
