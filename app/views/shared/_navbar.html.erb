<div class="navbar navbar-fixed-bottom navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid navbar-width-80">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "wings.svg", class: "logo" %>
      <span class="brand-font">ReturnsWorth</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link menu-button" %>
          </li>
          <% if current_user.warehouse_operator? %>
            <li class="nav-item active">
              <%= link_to "My returns", "/returns", class: "nav-link menu-button" %>
            </li>
            <li class="nav-item active">
              <%= link_to "logistic", "/logistics", class: "nav-link menu-button" %>
            </li>
          <% end %>
          <% if current_user.client_service_officer? %>
            <li class="nav-item active">
              <%= link_to "New return", "/returns/new", class: "nav-link menu-button" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Admin", "/admin", class: "nav-link menu-button" %>
            </li>
          <% end %>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Login", new_user_session_path, class: "nav-link menu-button" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a href="#" class="nav-link">
            <% if user_signed_in? && current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "https://www.nicepng.com/png/detail/804-8049853_med-boukrima-specialist-webmaster-php-e-commerce-web.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
